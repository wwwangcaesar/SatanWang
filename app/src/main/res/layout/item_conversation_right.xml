<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="1分钟前"
        android:textColor="#757575"
        android:textSize="11sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <com.lovcreate.core.widget.CircularImage
            android:id="@+id/civ_avatar_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_user_default_big"
            android:layout_alignParentRight="true"
            android:layout_gravity="left|top"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:padding="4dp"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_toLeftOf="@+id/civ_avatar_1">


            <com.github.library.bubbleview.BubbleTextVew
                android:id="@+id/btv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="phone|email"
                android:padding="10dp"
                android:text="你好！"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:angle="5dp"
                app:arrowHeight="10dp"
                app:arrowLocation="right"
                app:arrowPosition="14dp"
                app:arrowWidth="8dp"
                app:bubbleColor="@color/selector_conversation_right"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>