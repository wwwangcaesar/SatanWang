<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="about.nocare.casaer.satanwang.ui.appMore.simple2.PicActivity">

    <RelativeLayout
        android:id="@+id/rl_tool"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:visibility="gone">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:textColor="@color/white"
            android:text="取消"/>

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:textColor="@color/white"
            android:text="完成"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tllet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/horizontalListView"
        android:layout_margin="10dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/dottedline"
        android:gravity="center"
        android:text="请先选择图片，再进行美化"
        android:textSize="23sp" />

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_above="@+id/llAdd"
        android:layout_below="@+id/rl_tool"
        android:layout_marginBottom="18dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/pictureShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/horizontalListView"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"/>

    <com.lovcreate.core.widget.HorizontalListView
        android:id="@+id/horizontalListView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_above="@+id/ll_bottom"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:divider="@null"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/carme"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_beautify"
            android:gravity="center"
            android:text="拍照" />

        <TextView
            android:id="@+id/album"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_beautify"
            android:gravity="center"
            android:text="相册" />
    </LinearLayout>

    <!--图像增强-->
    <TableLayout
        android:id="@+id/tone_sub_menu"
        style="@style/sub_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="10.0dip"
        android:paddingLeft="3.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="10.0dip"
        android:stretchColumns="1"
        android:visibility="gone">

        <TableRow android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="饱和度"
                android:textColor="@color/white"
                android:textSize="13.0dip" />

            <SeekBar
                android:id="@+id/saturation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:max="200"
                android:progress="100" />
        </TableRow>


        <TableRow android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="亮度"
                android:textColor="@color/white"
                android:textSize="13.0dip" />

            <SeekBar
                android:id="@+id/brightness"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:max="200"
                android:progress="100" />
        </TableRow>

        <TableRow android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="对比度"
                android:textColor="@color/white"
                android:textSize="13.0dip" />

            <SeekBar
                android:id="@+id/contrast"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:max="200"
                android:progress="100" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
