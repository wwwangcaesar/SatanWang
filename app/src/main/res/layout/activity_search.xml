<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="about.nocare.casaer.satanwang.ui.home.SearchActivity">
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:background="@color/indicator_uncheck"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/add_friend_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            android:paddingLeft="14dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_left"/>

        <TextView
            android:id="@+id/add_friend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加朋友"
            android:textColor="@color/colorApp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_search_white"/>

        <LinearLayout
            android:id="@+id/add_friend_search_linear_layout"
            android:layout_toLeftOf="@+id/search_icon"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="12dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@color/gray">

            <EditText
                android:id="@+id/add_friend_search_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:imeOptions="actionSearch"
                android:background="@null"
                android:singleLine="true"
                android:textSize="13sp"
                android:textColorHint="#808198"
                android:textColor="#808198"
                android:hint="搜索"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
