<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filtersList"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/filtersSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/graffit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:drawableTop="@mipmap/star_blue"
                android:text="画笔1"
                />

            <TextView
                android:id="@+id/graffit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@mipmap/star_blue"
                android:text="画笔2"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/graffit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@mipmap/star_blue"
                android:text="画笔大小"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/graffit4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@mipmap/star_blue"
                android:text="画笔颜色"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/graffit5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@mipmap/star_blue"
                android:text="贴图"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/graffit6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@mipmap/star_blue"
                android:text="橡皮檫"
                android:gravity="center"
                />
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>